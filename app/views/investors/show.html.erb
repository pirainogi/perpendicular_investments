<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @investor.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @investor.last_name %>
</p>

<p>
  <strong>Date of Birth:</strong>
  <%= @investor.dob %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @investor.phone %>
</p>

<p>
  <strong>Street address:</strong>
  <%= @investor.street_address %>
</p>

<p>
  <strong>State address:</strong>
  <%= @investor.state_address %>
</p>

<p>
  <strong>Zip code:</strong>
  <%= @investor.zip_code %>
</p>

<ul>
  <% @investor.files.each do |file| %>
    <li>
    <% if file.previewable? %>
      <p>Download: <%= link_to file.filename, rails_blob_path(file, disposition: "attachment") %></p>
      <%= image_tag file.preview(resize: "100x100") %>
    <% elsif file.representable? %>
      <p>Download:<%= link_to file.filename, rails_blob_path(file, disposition: "attachment") %></p>
      <%= image_tag url_for(file) %>
    <% else %>
      <p>Preview Not Available </p>
    <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit Investor', edit_investor_path(@investor) %> |
<%= link_to 'Back to All Investors', investors_path %>
