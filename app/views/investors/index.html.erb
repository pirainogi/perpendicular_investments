<p id="notice"><%= notice %></p>

<h1>Investors</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>Phone</th>
      <th>Street address</th>
      <th>State address</th>
      <th>Zip code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investors.each do |investor| %>
      <tr>
        <td><%= investor.first_name %></td>
        <td><%= investor.last_name %></td>
        <td><%= investor.dob %></td>
        <td><%= investor.phone %></td>
        <td><%= investor.street_address %></td>
        <td><%= investor.state_address %></td>
        <td><%= investor.zip_code %></td>
        <td><%= link_to 'Show', investor %></td>
        <td><%= link_to 'Edit', edit_investor_path(investor) %></td>
        <td><%= link_to 'Destroy', investor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

