<h1>Login</h1>
<% if flash[:unauthenticated] %>
  <p style="color:red;"><%= flash[:unauthenticated] %></p>
<% end %>

<%= form_tag("/sessions") do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Log in" %>
<% end %><br>

<p> New User?</p> <%= link_to "Sign Up Here", new_user_path %>
